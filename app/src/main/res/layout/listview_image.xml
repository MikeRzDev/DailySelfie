<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:id="@+id/imageView_pictureImg"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Picture Title"
        android:textColor="#000000"
        android:id="@+id/textView_titlePicture"
        android:layout_alignTop="@+id/imageView_pictureImg"
        android:layout_marginTop="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/imageView_pictureImg"
        android:layout_toEndOf="@+id/imageView_pictureImg"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="2015-11-12"
        android:id="@+id/textView_pictureDate"
        android:layout_alignBottom="@+id/imageView_pictureImg"
        android:layout_alignRight="@+id/textView_titlePicture"
        android:layout_alignEnd="@+id/textView_titlePicture" />
</RelativeLayout>
